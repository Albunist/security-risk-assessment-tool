{
    "name": "sratool",
    "version": "1.0.0",
    "author": "Thales DIS",
    "license": "BSD-4-Clause",
    "description": "Security Risk Assessment tool",
    "main": "./src/electron/main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "dist-all": "electron-builder -mwl"
    },

    "build": {
        "extraResources": [{
                "from": "../lib",
                "to": "lib",
                "filter": [
                    "**/*",
                    "!**/node_modules/.bin"
                ]
            }
        ],
        "mac": {
            "mergeASARs" : false,
            "category": "public.app-category.business",
            "target": [ 
                {
                    "target" : "7z",
                    "arch" : "x64"
                },
                {
                    "target" : "7z",
                    "arch" : "arm64"
                }
             ]
        },
        "win": {
            "target": [
                {
                    "target" : "7z",
                    "arch" : "x64"
                }
            ]
        },
        "linux": {
            "target" : [
                {
                    "target": "tar.gz",
                    "arch" : "x64"
                }
            ]
        },
        "appId": "com.thalesgroup.dis.sratool"
    },
    "postinstall": "electron-builder install-app-deps",

    "dependencies": {
        "jquery": "^3.6.1",
        "tabulator-tables": "^5.3.4",
        "tinymce": "^6.2.0"
    },
    "devDependencies": {
        "electron-builder": "^24.4.0",
        "electron": "^22.0.0"
    },
    "overrides": {
        "got": "^11.8.5"
    }
}
